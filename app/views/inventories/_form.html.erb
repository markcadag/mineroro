<div class="panel panel-default" style="margin-top: 20px;">
  <div class="panel-heading"><svg class="glyph stroked email"><use xlink:href="#stroked-email"></use></svg> New Inventory Purchase</div>
      <div class="panel-body">
        <%= form_for inventory, remote: true, :html => { :class => 'form-horizontal' } do |f| %> 
            <% if inventory.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(inventory.errors.count, "error") %> prohibited this inventory from being saved:</h2>
              <ul>
                  <% inventory.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                  <% end %>
              </ul>
            </div>
        <% end %>
        <fieldset>
            <div class="form-group" style="margin-bottom:20px;">
              <div class="field">
                <%= f.label :item ,:class => 'col-md-3 control-label'  %>
                <div class="col-md-9">
                  <%= f.collection_select :item, Item.all, :id, :name, {include_blank: false}, {class: 'form-control', style: 'width:100%;'} %>
                </div>
              </div>
            </div>
            <hr/>
             <div class="form-group" style="margin-top: 15px;">
              <div class="field">
                <%= f.label :quantity ,:class => 'col-md-3 control-label'  %>
                <div class="col-md-9">
                   <%= f.number_field :quantity , {style: 'width:100%;',  class: 'form-control'} %>
                </div>
              </div>
            </div>
            <div class="form-group">
              <div class="field">
                <%= f.label :amount ,:class => 'col-md-3 control-label'  %>
                <div class="col-md-9">
                   <%= f.number_field :amount, {style: 'width:100%;',  class: 'form-control'} %>
                </div>
              </div>
            </div>
            <div class="form-group">
              <div class="field">
                <%= f.label :description ,:class => 'col-md-3 control-label'  %>
                <div class="col-md-9">
                    <%= f.text_area  :description, {style: 'width:100%;',  class: 'form-control'} %>
                </div>
              </div>
            </div>
              <div class="form-group">
                  <div class="col-md-12 widget-right">
                    <%= f.submit 'Submit', :class => 'btn btn-primary btn-md pull-right' %>
                  </div>
              </div>
           </fieldset>
           <% end %>
        </div>
      </div>