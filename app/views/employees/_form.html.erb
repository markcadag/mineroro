<%= form_for(@employee) do |f| %>
  <% if @employee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

      <ul>
      <% @employee.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :birthday %><br>
    <%= f.date_select :birthday %>
  </div>
  <div class="field">
    <%= f.label :mobile_number %><br>
    <%= f.text_field :mobile_number %>
  </div>
  <div class="field">
    <%= f.label :employee_type %><br>
      <%= f.select(:employee_type, Employee.employee_types.keys.map {|employee_type| [employee_type.titleize,employee_type]},:selected => @employee.employee_type) %>
  </div>

  <div class="field">
    <%= f.label :employee_status %><br>
      <%= f.select(:employee_status, Employee.employee_statuses.keys.map {|employee_status| [employee_status.titleize,employee_status]},:selected => @employee.employee_status) %>
  </div>

  <div class="field">
    <%= f.label :salary %><br>
    <%= f.number_field :salary %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
