<div id="modal-edit-fields" style="padding:20px;">
    <%= form_for @tunnel_operation, remote: true, :html => { :class => 'form-horizontal' } do |f| %> 
   	<fieldset>
    <div class="field">
        <%= f.label 'Produced', :class => 'col-md-3 control-label' %>
        <div class="col-md-9">
            <%= f.number_field :production_count, style: 'margin-bottom:15px;', :class => 'form-control'%>
        </div>
    </div>
		
		<div class="field">
		    <%= f.label :export_count, :class => 'col-md-3 control-label' %>
		     <div class="col-md-9">
		    	<%= f.number_field :export_count, style: 'margin-bottom:15px;', :class => 'form-control' %>
		    </div>
		</div>

		<div class="field">
		    <%= f.label :status, :class => 'col-md-3 control-label'%>
          <div class="col-md-9">
            <%= f.collection_select :status, StoredStatus.all,:name, :name, {prompt: true} ,{class: 'form-control', style: 'margin-bottom:15px;'} %>
          </div>
		</div>

		<div class="field">
		    <%= f.label :operation_type, :class => 'col-md-3 control-label'%>
		     <div class="col-md-9">
		    	<%= f.collection_select :operation_type, StoredOperationType.all,:name, :name, {prompt: true} ,{class: 'form-control', style: 'margin-bottom:15px;'} %>
		    </div>
		</div>

    <div class="field">
      <%= f.submit 'Update', :class => 'btn btn-primary btn-md pull-right' %>
    </div>

  	</fieldset>
    <% end %>
</div>