    </div>
  <% end %>

  <div class="field">
    <%= f.label :team_id %><br>
    <%= f.text_field :team_id %>
  </div>

  <div class="field">
  <%= f.label :team_id %><br>
   <%= f.collection_select :team_id, @teams, :id, :name, {prompt: true} ,{:id => 'team_select', class: 'form-control', style: 'margin-bottom:15px;', :multiple => true} %>
   </div>


  <div class="field">
  <%= f.label :miner_id %><br>
