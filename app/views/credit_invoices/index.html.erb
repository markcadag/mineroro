<p id="notice"><%= notice %></p>

<h1>Listing Credit Invoices</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Code</th>
      <th>Value date</th>
      <th>Due date</th>
      <th>Duration from</th>
      <th>Duration to</th>
      <th>Remarks</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @credit_invoices.each do |credit_invoice| %>
      <tr>
        <td><%= credit_invoice.title %></td>
        <td><%= credit_invoice.code %></td>
        <td><%= credit_invoice.value_date %></td>
        <td><%= credit_invoice.due_date %></td>
        <td><%= credit_invoice.duration_from %></td>
        <td><%= credit_invoice.duration_to %></td>
        <td><%= credit_invoice.remarks %></td>
        <td><%= link_to 'Show', credit_invoice %></td>
        <td><%= link_to 'Edit', edit_credit_invoice_path(credit_invoice) %></td>
        <td><%= link_to 'Destroy', credit_invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

