<h1>Listing Tunnels</h1>
<div class="table-responsive">
<table  class="table-bordered table-condensed table-hover" style="width: 100%">
  <thead>
    <tr>
      <th >Mine Name</th>
      <th>Tunnel Name</th>
      <th colspan="3"> Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @tunnels.each do |tunnel| %>
      <tr>
        <td><%=  tunnel.mine.name %></td>
        <td><%= tunnel.name %></td>
        <td><%= link_to 'Show', tunnel %></td>
        <td><%= link_to 'Edit', edit_tunnel_path(tunnel) %></td>
        <td><%= link_to 'Destroy', tunnel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Tunnel', new_tunnel_path %>

<style type="text/css">
  
  table {
    background-color: white;
  }

</style>