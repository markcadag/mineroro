<h1>Listing Personnels</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Date Hired</th>
      <th>Active</th>
      <th>Date Resign</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @personnels.each do |personnel| %>
      <tr>
        <td><%= personnel.name %></td>
        <td><%= personnel.date_hired %></td>
        <td><%= personnel.active %></td>
        <td><%= personnel.date_resign %></td>
        <td><%= link_to 'Show', personnel %></td>
        <td><%= link_to 'Edit', edit_personnel_path(personnel) %></td>
        <td><%= link_to 'Destroy', personnel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

