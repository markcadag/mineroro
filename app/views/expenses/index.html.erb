            <table id="table" id="table-style" data-show-refresh="true" data-show-toggle="true" data-show-columns="true" data-search="true" data-select-item-name="toolbar1" data-pagination="true" data-sort-name="name" data-sort-order="desc" data-row-style="rowStyle"></table>
            <script>

                $(function () {
    
                   var $table = $('#table'),
                   $button = $('#button');
                   var jsonExpense;
                   $button.click(function () {

                      var ids = $.map($table.bootstrapTable('getSelections'), function (row) {
                          return row.id;
                      });
                      
                      var jsonParams = JSON.stringify($table.bootstrapTable('getSelections'));

                      $.ajax({
                          url: '<%= expense_destroy_multiple_path %>',
                          type: 'DELETE',
                          data: { expenses:  ids },
                          success: function(result) {
                            $table.bootstrapTable('remove', {
                              field: 'id',
                              values: ids
                            });
                          }
                      });
                    });

                  $table.bootstrapTable({
                    url: '/expenses.json',
                    data: gon.expenses,
                    onClickRow: function(row, $element){
                        jsonExpense = JSON.stringify(row);
                        $("#myModal").modal();
                    },
                    columns: [{
                        field: 'state',
                        checkbox: true,
                        align: 'center',
                        valign: 'middle'

                    },{
                        title: 'Name',
                        field: 'name',
                        align: 'left',
                        valign: 'middle',
                        sortable: true,
                    },{
                        title: 'Amount',
                        field: 'amount',
                        align: 'left',
                        valign: 'middle',
                        formatter: totalFormatter,
                        sortable: true,
                    },{
                        title: 'Quantity',
                        field: 'quantity',
                        align: 'left',
                        valign: 'middle',
                        sortable: true,
                    },{
                        title: 'Unit',
                        field: 'unit',
                        align: 'left',
                        valign: 'middle',
                        sortable: true,
                    },{
                        title: 'Category',
                        field: 'category',
                        align: 'left',
                        valign: 'middle',
                        sortable: true,
                    },{
                        title: 'For',
                        field: 'tunnels',
                        align: 'left',
                        valign: 'middle',
                        formatter: forFormater,
                        sortable: true,
                    },{
                        title: 'Requester',
                        field: 'user.first_name',
                        align: 'left',
                        valign: 'middle',
                        sortable: true,
                    },{
                        title: 'Description',
                        field: 'description',
                        align: 'left',
                        valign: 'middle',
                        sortable: true,
                    },{
                        title: 'Created',
                        field: 'created_at',
                        align: 'left',
                        valign: 'middle',
                        formatter: dateFormatter,
                        sortable: true,
                    },{
                        title: 'Updated',
                        field: 'updated_at',
                        align: 'left',
                        valign: 'middle',
                        formatter: dateFormatter,
                        sortable: true,
                    },{
                        title: 'Total',
                        field: 'total',
                        align: 'left',
                        valign: 'middle',
                        formatter: totalFormatter,
                        sortable: true,
                    }]
                  });


                  function totalFormatter(value) {
                      return 'Php ' + numberWithCommas(value);
                  }

                  function numberFormatter(value){
                      return 'Php ' + numberWithCommas(value);
                  }

                  function dateFormatter(value) {
                    return  value.slice(0,10); 
                  }

                  function forFormater(value) {
                    var stringData ='';
                    $.each(value,function(i,el) {
                        stringData = stringData + el.name + ',';
                    })
                    return stringData;
                  }
             

              });

            </script>

